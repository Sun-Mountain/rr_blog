<% content_for :page_title, @post.title %>

<section class="">
    <div class="">
    <nav class="">
        <!-- Left side -->
        <div class="">
            <p class="">
                <strong>Actions</strong>
            </p>
        </div>

        <!-- Right side -->
        <div  class="">
            <p class="">
                <%= link_to "Edit", edit_post_path(@post), class: "" %>
            </p>
            <p class="">
                <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class: "" %>
            </p>
        <div>
        </nav>
        <hr />

        <div class="">
            <%= @post.content %>
        </div>

    </div>
</section>

<section class="">
    <div class="">
        <h2 class=""><strong><%= @post.comments.count %></strong> Comments</h2>
        <%= render @post.comments %>

        <div class="">
            <hr />
            <h3 class="">Mmm, Whatchya say?</h3> 
            <%= render 'comments/form' %>
        </div>
    </div>
</section>