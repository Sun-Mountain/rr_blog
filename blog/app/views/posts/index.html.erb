<h1 class="title">Blog Index</h1>

<section class="section">
    <div class="container">
        <% @post.each do |post| %>
            <div class="card">
                <div class="card-content">
                    <div class="media">
                        <div class="media-content">
                            <p class="title is-4"><% post title %></p>
                        </div>
                    </div>
                    <div class="content">
                        <% # post content %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</section>